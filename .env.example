# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/auth_service?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-at-least-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Email Configuration (for password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourapp.com

# Security Configuration
BCRYPT_COST=12
PASSWORD_RESET_EXPIRY=1h
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=15m

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0