# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/auth_service?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-at-least-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Email Configuration (for password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourapp.com

# Security Configuration
BCRYPT_COST=12
PASSWORD_RESET_EXPIRY=1h
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=15m

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Verification Configuration
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRY=24h

# Email Notification Configuration
SEND_WELCOME_EMAIL=true
SEND_PASSWORD_CHANGED_EMAIL=true

# IP Whitelist Configuration
# Enable IP whitelisting to restrict access to specific IPs
IP_WHITELIST_ENABLED=false
# Comma-separated list of allowed IPs and CIDR ranges
# Examples: "192.168.1.1,10.0.0.0/24,203.0.113.5"
ALLOWED_IPS=